# PanelPals V2 Backend Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=true
ALLOWED_ORIGINS=["http://localhost:3000"]

# Google Vision API (Section 6: OCR Pipeline)
# Path to your Google Cloud service account JSON credentials
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-credentials.json
# Max number of images to process in a single batch request
GOOGLE_VISION_MAX_BATCH_SIZE=10

# ElevenLabs API (Section 8: Text-to-Speech)
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=N2lVS1w4EtoT3dr4eOWO
ELEVENLABS_MAX_PARALLEL_REQUESTS=2

# Audio Processing (Section 9: Audio Stitching)
AUDIO_PAUSE_DURATION_MS=500
AUDIO_OUTPUT_FORMAT=wav
AUDIO_SAMPLE_RATE=44100

# Text Bubble Grouping (Section 6.1)
# Max vertical gap between lines in the same bubble (pixels)
# Typical line spacing in webtoons: 60-100 pixels
BUBBLE_MAX_VERTICAL_GAP=100
# Max horizontal center shift for lines in the same bubble (pixels)
BUBBLE_MAX_CENTER_SHIFT=150

# Security & Rate Limiting (Section 5.2)
MAX_IMAGE_SIZE_MB=10
MAX_IMAGES_PER_REQUEST=50
RATE_LIMIT_PER_MINUTE=10